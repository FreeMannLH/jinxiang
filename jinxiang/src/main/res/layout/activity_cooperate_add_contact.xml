<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_marginTop="@dimen/margin20dp"
        style="@style/add_contact_layout_style">

        <TextView

            style="@style/add_contact_textview_style"
            android:text="@string/name"/>

        <EditText
            android:id="@+id/name"
            style="@style/add_customer_edittext_style"
            />
    </LinearLayout>

    <LinearLayout
        style="@style/add_contact_layout_style">

        <TextView

            style="@style/add_contact_textview_style"
            android:text="@string/phone"/>

        <EditText
            android:inputType="phone"
            android:id="@+id/phone"
            style="@style/add_customer_edittext_style"
            />
    </LinearLayout>

    <LinearLayout
        style="@style/add_contact_layout_style">

        <TextView

            style="@style/add_contact_textview_style"
            android:text="@string/called"/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin5dp"
            android:gravity="center"
            android:spinnerMode="dialog"
            />
    </LinearLayout>

    <LinearLayout
        style="@style/add_contact_layout_style">

        <TextView

            style="@style/add_contact_textview_style"
            android:text="联系人："/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/contact_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin5dp"
            android:gravity="center"
            android:spinnerMode="dialog"
            />
    </LinearLayout>

    <LinearLayout
        style="@style/add_contact_layout_style">

        <TextView

            style="@style/add_contact_textview_style"
            android:text="是否主要联系人："/>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/isMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        style="@style/add_contact_layout_style">

        <TextView

            style="@style/add_contact_textview_style"
            android:text="角色："/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin5dp"
            android:gravity="center"
            android:spinnerMode="dialog"
            />
    </LinearLayout>

    <LinearLayout
        style="@style/add_contact_layout_style">

        <TextView

            style="@style/add_contact_textview_style"
            android:text="支持程度："/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/support_lv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin5dp"
            android:gravity="center"
            android:spinnerMode="dialog"
            />
    </LinearLayout>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/id_btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/confirm_button_margin"
        android:background="@drawable/round_corners_bg"
        android:text="@string/confirm"/>
</LinearLayout>
