<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin5dp"
    android:layout_marginRight="@dimen/margin5dp"
    android:background="@drawable/selector"
    android:id="@+id/id_customer_item"
    android:layout_marginTop="@dimen/margin5dp"
    card:cardCornerRadius="@dimen/cardview_default_radius"
    card:cardElevation="@dimen/cardview_default_elevation">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_target_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin10dp"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/text_size_default"/>

            <TextView
                android:textColor="@color/text_color_light_black"
                android:id="@+id/id_customer_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin10dp"
                android:textSize="@dimen/text_size_sub_default"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/id_customer_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin10dp"
                android:textSize="@dimen/text_size_time"/>

            <TextView
                android:id="@+id/id_customer_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin10dp"
                android:textSize="@dimen/text_size_time"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_customer_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin10dp"
                android:textSize="@dimen/text_size_time"/>

            <TextView
                android:id="@+id/id_customer_industry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin10dp"
                android:textSize="@dimen/text_size_time"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>