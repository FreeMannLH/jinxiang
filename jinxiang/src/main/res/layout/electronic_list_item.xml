<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin10dp"
    android:layout_marginRight="@dimen/margin10dp"
    android:layout_marginTop="@dimen/margin10dp"
    card:cardCornerRadius="@dimen/cardview_default_radius"
    card:cardElevation="@dimen/cardview_default_elevation">

    <LinearLayout
        android:id="@+id/id_electronic_list_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin10dp"
        android:paddingRight="@dimen/margin10dp">

        <TextView
            android:id="@+id/id_bulletin_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingBottom="@dimen/margin10dp"
            android:paddingTop="@dimen/margin10dp"
            android:singleLine="true"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/id_bulletin_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            />

        <!--<WebView-->
            <!--android:id="@+id/id_bulletin_content_tv"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="@dimen/margin10dp"-->
            <!--android:ellipsize="end"-->
            <!--android:gravity="center_vertical"-->
            <!--android:lineSpacingExtra="3dp"-->
            <!--android:lineSpacingMultiplier="1.2"-->
            <!--android:maxLines="3"-->
            <!--android:textColor="@color/text_color_light_black"-->
            <!--android:textSize="@dimen/text_size_sub_default"-->
            <!--/>-->

        <TextView
            android:id="@+id/id_bulletin_detail_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin10dp"
            android:layout_marginTop="@dimen/margin10dp"
            android:gravity="end|center_vertical"
            android:paddingRight="@dimen/margin10dp"
            android:text="阅读全文"
            android:textColor="@color/holo_light_blue"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
