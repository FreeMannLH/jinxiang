<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ideatc.jinxiang.activity.AgreeActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin10dp"
        android:orientation="horizontal"
        android:padding="@dimen/margin10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一环节" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/id_next_step_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/margin20dp" />

    </LinearLayout>

    <Space style="@style/style_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin10dp"
        android:orientation="horizontal"
        android:padding="@dimen/margin10dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处理人员" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/id_solve_staff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/margin20dp"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <Space

        style="@style/style_divider" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/id_agree_edittext"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="@dimen/margin10dp"
        android:hint="填写意见"
        android:imeOptions="actionDone"
        android:inputType="textMultiLine"
        android:padding="@dimen/margin10dp"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:textColor="@color/holo_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin10dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/id_agree_cancel_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/abc_btn_borderless_material"
            android:gravity="center"
            android:padding="@dimen/margin20dp"
            android:text="@string/cancel" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/id_agree_confirm_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/abc_btn_borderless_material"
            android:gravity="center"
            android:padding="@dimen/margin20dp"
            android:text="@string/confirm" />
    </LinearLayout>
</LinearLayout>
