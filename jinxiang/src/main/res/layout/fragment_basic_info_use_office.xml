        android:showDividers="end"
        android:shrinkColumns="0,2"
        android:stretchColumns="0,1,2">

        <TableRow>

            <TextView
                android:background="#c8dff1"
                android:gravity="center"
                android:padding="@dimen/margin10dp"
                android:text="物品" />

            <TextView
