                android:padding="@dimen/margin10dp"
                android:text="数量" />

            <TextView
                android:background="#c8dff1"
                android:gravity="center"
                android:padding="@dimen/margin10dp"
                android:text="单位" />

            <TextView
                android:background="#c8dff1"
                android:gravity="center"
                android:padding="@dimen/margin10dp"
                android:text="实际数量" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/id_goods1"
                android:gravity="center"
                android:padding="@dimen/margin10dp"
                android:textSize="@dimen/text_size_time" />

            <TextView
                android:id="@+id/id_count1"
                android:gravity="center"
                android:padding="@dimen/margin10dp"
                android:textSize="@dimen/text_size_time" />

            <TextView
                android:id="@+id/id_unit1"
                android:gravity="center"
                android:padding="@dimen/margin10dp"
                android:textSize="@dimen/text_size_time" />

            <EditText
                android:id="@+id/id_fact1"
