<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin20dp"
    android:layout_marginRight="@dimen/margin20dp"
    android:layout_marginTop="@dimen/margin20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/matter_basic_info_title"
            android:text="借用人" />

        <TextView

            android:id="@+id/id_lend_name"
            style="@style/matter_basic_info_item_style" />
    </LinearLayout>

    <Space style="@style/style_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/matter_basic_info_title"
            android:text="目的地" />

        <TextView
            android:id="@+id/id_target_place"
            style="@style/matter_basic_info_item_style" />
    </LinearLayout>

    <Space style="@style/style_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/matter_basic_info_title"
            android:text="申请日期" />

        <TextView
            android:id="@+id/id_apply_date"
            style="@style/matter_basic_info_item_style" />
    </LinearLayout>

    <Space style="@style/style_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/matter_basic_info_title"
            android:text="用途" />

        <TextView
            android:id="@+id/id_use"
            style="@style/matter_basic_info_item_style" />
    </LinearLayout>

    <Space style="@style/style_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/matter_basic_info_title"
            android:text="出发日期" />

        <TextView
            android:id="@+id/id_start_date"
            style="@style/matter_basic_info_item_style" />
    </LinearLayout>

    <Space style="@style/style_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/matter_basic_info_title"
            android:text="返回日期" />

        <TextView
            android:id="@+id/id_back_date"
            style="@style/matter_basic_info_item_style" />
    </LinearLayout>

    <Space style="@style/style_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/matter_basic_info_title"
            android:text="出发前公里数" />

        <TextView
            android:id="@+id/id_start_km"
            style="@style/matter_basic_info_item_style" />
    </LinearLayout>

    <Space style="@style/style_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/matter_basic_info_title"
            android:text="回来后公里数" />

        <TextView
            android:id="@+id/id_back_km"
            style="@style/matter_basic_info_item_style" />
    </LinearLayout>

    <Space style="@style/style_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/matter_basic_info_title"
            android:text="派车事由" />

        <TextView
            android:id="@+id/id_reason"
            style="@style/matter_basic_info_item_style" />
    </LinearLayout>

    <Space style="@style/style_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            style="@style/matter_basic_info_title"
            android:text="备注信息" />

        <TextView
            android:id="@+id/id_remark"
            style="@style/matter_basic_info_item_style" />
    </LinearLayout>

    <Space style="@style/style_divider" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/holo_gray"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/id_rb1"
            style="@style/mat0ter_detail_handle_btn_style" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/id_rb2"
            style="@style/mat0ter_detail_handle_btn_style" />
    </RadioGroup>
</LinearLayout>