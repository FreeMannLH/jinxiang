<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin20dp"
    android:layout_marginRight="@dimen/margin20dp"
    android:layout_marginTop="@dimen/margin20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/matter_basic_info_title"
            android:text="借章人" />

        <TextView

            android:id="@+id/id_lend_name"
            style="@style/matter_basic_info_item_style" />
    </LinearLayout>

    <Space style="@style/style_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/matter_basic_info_title"
            android:text="预计借章日期" />

        <TextView
            android:id="@+id/id_predict_date"
            style="@style/matter_basic_info_item_style" />
    </LinearLayout>

    <Space style="@style/style_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/matter_basic_info_title"
            android:text="借章事由" />

        <TextView
            android:id="@+id/id_content"
            style="@style/matter_basic_info_item_style" />
    </LinearLayout>

    <Space style="@style/style_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/matter_basic_info_title"
            android:text="实际借章日期" />

        <TextView
            android:id="@+id/id_fact_date"
            style="@style/matter_basic_info_item_style" />
    </LinearLayout>

    <Space style="@style/style_divider" />


    <Space style="@style/style_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/matter_basic_info_title"
            android:text="实际到手日期" />

        <TextView
            android:id="@+id/id_get_date"
            style="@style/matter_basic_info_item_style" />
    </LinearLayout>

    <Space style="@style/style_divider" />


    <Space style="@style/style_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/matter_basic_info_title"
            android:text="还章日期" />

        <TextView
            android:id="@+id/id_back_date"
            style="@style/matter_basic_info_item_style" />
    </LinearLayout>

    <Space style="@style/style_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/matter_basic_info_title"
            android:text="还章时间" />

        <TextView
            android:id="@+id/id_back_time"
            style="@style/matter_basic_info_item_style" />
    </LinearLayout>

    <Space style="@style/style_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            style="@style/matter_basic_info_title"
            android:text="创建时间" />

        <TextView
            android:id="@+id/id_remark"
            style="@style/matter_basic_info_item_style" />
    </LinearLayout>

    <Space style="@style/style_divider" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/holo_gray"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/id_rb1"
            style="@style/mat0ter_detail_handle_btn_style" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/id_rb2"
            style="@style/mat0ter_detail_handle_btn_style" />
    </RadioGroup>
</LinearLayout>