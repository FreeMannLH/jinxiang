<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_cardview_height"
            android:orientation="horizontal">

            <TextView
                style="@style/visit_detail_item_style"
                android:text="@string/setUp_date"
                />

            <TextView
                android:id="@+id/id_customer_name"
                style="@style/visit_detail_item"
                android:gravity="center"/>
        </LinearLayout>

        <Space
            style="@style/style_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_cardview_height"
            android:orientation="horizontal">

            <TextView
                style="@style/visit_detail_item_style"
                android:text="@string/staff_count"/>

            <TextView
                android:id="@+id/id_customer_type"
                style="@style/visit_detail_item"
                android:gravity="center"/>
        </LinearLayout>

        <Space
            style="@style/style_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_cardview_height"
            android:orientation="horizontal">

            <TextView

                style="@style/visit_detail_item_style"
                android:text="@string/RegisteredCapital"
                />

            <TextView
                android:id="@+id/id_customer_level"
                style="@style/visit_detail_item"
                android:gravity="center"/>
        </LinearLayout>

        <Space
            style="@style/style_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_cardview_height"
            android:orientation="horizontal">

            <TextView
                style="@style/visit_detail_item_style"
                android:text="@string/year_Turnover"
                />

            <TextView
                android:id="@+id/id_customer_resource"
                style="@style/visit_detail_item"
                android:gravity="center"/>
        </LinearLayout>

        <Space
            style="@style/style_divider"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_cardview_height"
            android:orientation="horizontal">

            <TextView
                style="@style/visit_detail_item_style"
                android:text="@string/LegalAddr"
                />

            <TextView
                android:id="@+id/id_customer_qianzai_level"
                style="@style/visit_detail_item"
                android:gravity="center"/>
        </LinearLayout>

        <Space
            style="@style/style_divider"/>
    </LinearLayout>
</ScrollView>