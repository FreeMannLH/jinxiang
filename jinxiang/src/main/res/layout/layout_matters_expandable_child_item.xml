<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@drawable/selector"
              android:id="@+id/id_matters_child_layout"
              android:paddingLeft="@dimen/margin20dp"
              android:paddingRight="@dimen/margin20dp"
    >

    <TextView
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/margin5dp"
        android:id="@+id/id_matters_expandable_child_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="周杰伦"
        android:textSize="@dimen/text_size_default"/>

    <LinearLayout
        android:layout_marginTop="@dimen/margin5dp"
        android:layout_marginBottom="@dimen/margin5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_matters_expandable_child_detail"
            android:layout_width="0dp"
            android:textColor="@color/text_color_light_black"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_matters_expandable_child_name"
            android:layout_weight="1"
            android:text="办公用品领用"
            android:textSize="@dimen/text_size_sub_default"/>

        <TextView
            android:layout_marginRight="@dimen/margin10dp"
            android:id="@+id/id_matters_expandable_child_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_matters_expandable_child_name"
            android:layout_toRightOf="@id/id_matters_expandable_child_detail"
            android:text="2015-10-20"
            android:textSize="@dimen/text_size_sub_default"/>
    </LinearLayout>
</LinearLayout>
