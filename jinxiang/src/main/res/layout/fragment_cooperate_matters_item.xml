<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/layout"
              android:layout_margin="@dimen/margin5dp"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/matters"
        android:textColor="@color/text_color_light_black"
        android:textSize="@dimen/text_size_sub_default"
        android:padding="@dimen/margin10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="业务事项"/>

    <TextView
        android:id="@+id/cost"
        android:textColor="@color/text_sub_color_light_gray"
        android:textSize="@dimen/text_size_sub_default"
        android:padding="@dimen/margin10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总费用：10000"/>
</LinearLayout>