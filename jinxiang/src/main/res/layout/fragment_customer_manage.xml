<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="ideatc.jinxiang.fragment.home_activity.CustomerManageFragment"
    >

    <LinearLayout
        android:layout_marginTop="@dimen/margin20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_crm_cardView_marginTop"
                card:cardCornerRadius="@dimen/cardview_default_radius"
                card:cardElevation="@dimen/cardview_default_elevation">

                <TextView
                    android:id="@+id/visit_sign"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:drawableTop="@drawable/client_con3"
                    android:gravity="center"
                    android:text="拜访签到"
                    android:textSize="@dimen/text_size_sub_default"
                    />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_crm_cardView_marginTop"
                card:cardCornerRadius="@dimen/cardview_default_radius"
                card:cardElevation="@dimen/cardview_default_elevation">

                <TextView
                    android:id="@+id/visit_record"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:drawableTop="@drawable/client_con2"
                    android:gravity="center"
                    android:text="拜访记录"
                    android:textSize="@dimen/text_size_sub_default"
                    />
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_crm_cardView_marginTop"
                card:cardCornerRadius="@dimen/cardview_default_radius"
                card:cardElevation="@dimen/cardview_default_elevation">

                <TextView
                    android:id="@+id/customer_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:drawableTop="@drawable/client_con1"
                    android:gravity="center"
                    android:text="客户查询"
                    android:textSize="@dimen/text_size_sub_default"
                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_crm_cardView_marginTop"
                card:cardCornerRadius="@dimen/cardview_default_radius"
                card:cardElevation="@dimen/cardview_default_elevation">

                <TextView
                    android:id="@+id/project_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:drawableTop="@drawable/client_con4"
                    android:gravity="center"
                    android:text="项目查询"
                    android:textSize="@dimen/text_size_sub_default"
                    />
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_crm_cardView_marginTop"
                card:cardCornerRadius="@dimen/cardview_default_radius"
                card:cardElevation="@dimen/cardview_default_elevation">

                <TextView
                    android:id="@+id/cooperateChance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:drawableTop="@drawable/client_con1"
                    android:gravity="center"
                    android:text="合作机会"
                    android:textSize="@dimen/text_size_sub_default"
                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_crm_cardView_marginTop"
                card:cardCornerRadius="@dimen/cardview_default_radius"
                card:cardElevation="@dimen/cardview_default_elevation">

                <TextView
                    android:id="@+id/travelReg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:drawableTop="@drawable/client_con3"
                    android:gravity="center"
                    android:text="出差登记"
                    android:textSize="@dimen/text_size_sub_default"
                    />
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>